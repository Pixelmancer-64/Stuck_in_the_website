---
import ThemeToggle from "./ThemeToggle.astro";
import { Icon } from "astro-icon";

const iconLinks: { label: string; href: string; icon: string }[] = [
  {
    label: "GitHub",
    href: "https://github.com/Pixelmancer-64",
    icon: "grommet-icons:github",
  },
  {
    label: "Instagram",
    href: "https://www.instagram.com/_pixelmancer/",
    icon: "grommet-icons:instagram",
  },
  {
    label: "Linkedin",
    href: "https://www.linkedin.com/in/hugo-bill%C3%A9/",
    icon: "grommet-icons:linkedin",
  },
  {
    label: "Email",
    href: "mailto:hugobillemartins@gmail.com",
    icon: "grommet-icons:mail",
  },
  {
    label: "Blog",
    href: "https://blog.pixelmancer.com.br/",
    icon: "grommet-icons:globe",
  },
  {
    label: "Curriculum vit√¶",
    href: "assets/Curriculo_Hugo_Bille_Martins.pdf",
    icon: "grommet-icons:document-user",
  },
];
---

<nav>
  <div class="menu-header">
    <a href="/" class="site-title">
      <Icon name="simple-icons:saturn" size="2em" />
      Pixelmancer
    </a>
  </div>

  <div class="menu-content">
    <div class="socials">
      {
        iconLinks.map(({ href, icon, label }) => (
          <a href={href} class="social">
            <span class="sr-only">{label}</span>
            <Icon name={icon} size="1em" />
          </a>
        ))
      }
    </div>
  </div>
</nav>

<style>
  nav {
    z-index: 9999;
    position: sticky;
    background-color: #090b11;
    width: 100%;
    font-family: var(--font-brand);
    font-weight: 500;
    top: 0;
    padding: 32px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-grow: 1;
  }

  .menu-header {
    display: flex;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .nav-items {
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: var(--text-md);
    line-height: 1.2;
    list-style: none;
    padding: 2rem;
    border-bottom: 1px solid var(--gray-800);
  }

  .menu-content{
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .link {
    display: inline-block;
    color: var(--gray-300);
    text-decoration: none;
  }

  .link.active {
    color: var(--gray-0);
  }

  .menu-footer {
    --icon-size: var(--text-xl);
    --icon-padding: 0.5rem;

    display: flex;
    justify-content: space-between;
    gap: 0.75rem;
    padding: 1.5rem 2rem 1.5rem 1.5rem;
    border-radius: 0 0 0.75rem 0.75rem;
    box-shadow: var(--shadow-lg);
  }

  .socials {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    font-size: var(--icon-size);
  }

  .social {
    display: flex;
    padding: var(--icon-padding);
    text-decoration: none;
    color: var(--accent-regular);
    transition: color var(--theme-transition);
  }

  .social:hover,
  .social:focus {
    color: var(--accent-text-over);
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    height: calc(var(--icon-size) + 2 * var(--icon-padding));
  }

</style>
